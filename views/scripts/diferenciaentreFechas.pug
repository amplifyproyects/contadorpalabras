

script(type='text/javascript').
 document.getElementById("fecha1").defaultValue = "2021-02-09"; 
 document.getElementById("fecha2").defaultValue = "2022-02-09"; 

 function diferenciaFechas(){

  let segundo  = document.getElementById('segundo')
  let minuto  = document.getElementById('minuto')
  let dia  = document.getElementById('dia')
  let hora  = document.getElementById('hora')
  let semana = document.getElementById('semana')
  let mes  = document.getElementById('mes')
  let ano  = document.getElementById('ano')
  let decada  = document.getElementById('decada')
  let siglo  = document.getElementById('siglo')

  let fecha1 = new Date(document.getElementById('fecha1').value).getTime(); 
  let fecha2 = new Date(document.getElementById('fecha2').value).getTime();

  let diff = fecha2 - fecha1;

  let onesegundo = 1000

  segundo.innerHTML = 'Diferencia en segundos: '+diff/onesegundo
  minuto.innerHTML = 'Diferencia en minutos: '+diff/(60*onesegundo)
  hora.innerHTML = 'Diferencia en horas: '+diff/(60*60*onesegundo)
  dia.innerHTML = 'Diferencia en días: '+diff/(24*60*60*onesegundo)
  semana.innerHTML = 'Diferencia en semanas: '+diff/(4*24*60*60*onesegundo)
  mes.innerHTML = 'Diferencia en meses: '+diff/(24*60*60*onesegundo*30.4167)
  ano.innerHTML = 'Diferencia en años: '+diff/(24*60*60*onesegundo*30.4167*12)
  decada.innerHTML = 'Diferencia en decadas: '+diff/(24*60*60*onesegundo*30.4167*12*10)
  siglo.innerHTML = 'Diferencia en siglos: '+diff/(24*60*60*onesegundo*30.4167*12*100)

 }

 diferenciaFechas()